# ============================================================
#  SYSADMIN AI BOT - ENVIRONMENT TEMPLATE
#  Copy this file to .env and fill in your values.
# ============================================================

# --- Ollama Engine (Container 1) ---
OLLAMA_HOST=ollama-engine
OLLAMA_PORT=11434
OLLAMA_BASE_URL=http://ollama-engine:11434

# --- Model Definitions ---
ROUTER_MODEL=llama3.2:3b
EXPERT_MODEL=llama3.1:8b

# --- MCP Server (Container 3) ---
MCP_SERVER_HOST=mcp-server
MCP_SERVER_PORT=8100
MCP_SERVER_URL=http://mcp-server:8100

# --- Target Linux Server (SSH) ---
SSH_TARGET_HOST=        # e.g. 192.168.1.100
SSH_TARGET_PORT=22
SSH_TARGET_USER=admin
SSH_KEY_PATH=/root/.ssh/id_rsa

# --- RBAC ---
DEFAULT_USER_ROLE=junior

# --- Logging ---
LOG_LEVEL=INFO
